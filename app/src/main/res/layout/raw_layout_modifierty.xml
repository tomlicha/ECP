<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="75dp"
    android:background="@drawable/roundedbutton"
    android:weightSum="1"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal">
        <TextView
            android:layout_marginLeft="10dp"
            android:text="Champagne"
            android:textColor="#760808"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:id="@+id/tx_name"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:textAppearance="?android:textAppearanceLarge"/>
        <TextView
            android:text="20"
            android:textColor="#760808"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:id="@+id/tx_price"
            android:layout_toRightOf="@id/tx_name"
            android:gravity="center"
            android:textAppearance="?android:textAppearanceLarge"/>
        <TextView
            android:text="1"
            android:textColor="#760808"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:id="@+id/tx_majority"
            android:layout_toRightOf="@id/tx_price"
            android:gravity="center"
            android:textAppearance="?android:textAppearanceLarge"/>

        <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/delete"
            android:layout_gravity="center_horizontal"

            />
    </LinearLayout>


</LinearLayout>