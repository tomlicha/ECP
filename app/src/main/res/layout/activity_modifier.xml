<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/fond_vide"
    android:layout_height="match_parent"
    android:alpha="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_horizontal|center_vertical">

        <EditText
            android:background="@drawable/roundedbutton"
            android:id="@+id/mod_product_name"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:ems="5"
            android:gravity="center_horizontal|center_vertical"
            android:inputType="textCapCharacters"
            android:text="Name"
            android:textSize="20dp"
            android:textColorHint="#760808"
            android:textColor="#760808" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:background="@drawable/leftroundedbutton"
            android:id="@+id/mod_majorite"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:paddingLeft="5dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="MajoritÃ© : "
            android:textSize="20dp"
            android:textColor="#760808"/>

        <CheckBox
            android:background="@drawable/centerroundedbutton"
            android:id="@+id/maj_oui"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="OUI"
            android:textSize="20dp"
            android:textColor="#760808"
            android:layout_gravity="center_vertical"/>

        <CheckBox
            android:background="@drawable/rightroundedbutton"
            android:id="@+id/maj_non"
            android:layout_width="wrap_content"
            android:layout_height="50dp"

            android:textColor="#760808"
            android:textSize="20dp"
            android:text="NON"
            android:layout_gravity="center_vertical"/>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/dernier_bloc"
        android:layout_weight="1">

        <TextView
            android:background="@drawable/leftroundedbutton"
            android:id="@+id/mod_prix"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:text="Prix : "
            android:textColor="#760808"
            android:textSize="20dp" />

        <EditText
            android:background="@drawable/rightroundedbutton"
            android:id="@+id/mod_product_price"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center_horizontal|center_vertical"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_weight="1"
            android:ems="5"
            android:inputType="numberDecimal"
            android:text="0.0"
            android:textSize="20dp"
            android:textColorHint="#760808"
            android:textColor="#760808"/>

    </LinearLayout>

    <Button
        android:id="@+id/valider"
        android:layout_gravity="center_horizontal"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_weight="1"
        android:background="@drawable/roundedbutton"
        android:onClick="modifier"
        android:text="VALIDER"
        android:textColor="#760808"
        android:textSize="20dp" />

</LinearLayout>